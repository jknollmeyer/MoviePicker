<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout"
    android:orientation="vertical">


    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:textColor="#E4DED0"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peoplePrompt"
        android:text="@string/people_prompt"
        android:textSize="40sp"
        android:singleLine="false"
        android:layout_marginTop="95dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20sp" />

    <Spinner
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:id="@+id/PeopleSpinner"
        android:background="#E4DED0"
        android:entries="@array/spinnerNums"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="120sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to selection"
        android:id="@+id/StartButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

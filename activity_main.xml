<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_movie"
        android:id="@+id/btnFindMovie"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GenreInput"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:hint="@string/GenreInput"
        android:layout_alignRight="@+id/btnFindMovie"
        android:layout_alignEnd="@+id/btnFindMovie"
        android:text="@string/GenreInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ActorInput"
        android:layout_below="@+id/GenreInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/GenreInput"
        android:layout_alignEnd="@+id/GenreInput"
        android:hint="@string/ActorInput"
        android:text="@string/ActorInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DirectorInput"
        android:layout_below="@+id/ActorInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ActorInput"
        android:layout_alignEnd="@+id/ActorInput"
        android:hint="@string/DirectorInput"
        android:text="@string/DirectorInput" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/DirectorInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@string/year_prompt"
        android:focusableInTouchMode="true"
        android:layout_alignRight="@+id/DirectorInput"
        android:layout_alignEnd="@+id/DirectorInput" />

</RelativeLayout>
